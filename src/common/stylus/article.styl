@import "theme.styl"

#article-page-content
  > article
    text-align left
    padding 0 10px
    h1, h2, h3, h4, h5, h6, h7
      padding 25px 0 15px
      font-weight 700
    h1
      font-size 27px
    h2
      font-size 25px
    h3
      font-size 22px
    h4, h5, h6, h7
      font-size 20px
    ul
      list-style-type circle
      margin 0
      line-height 1.5em
      padding-left 1em
    li
      margin .5em 0
    p
      font-size 17px
      line-height 25px
      color $color-typegraphy-title
      font-weight 200
      margin 15px 0
    img
      width 100%
    pre
      position relative
      display block
      box-sizing border-box
      padding 10px
      margin 0 0 10.5px
      line-height 1.7
      font-size 18px
      font-family "Source Code Pro", monospace
      color #333
      background-color rgba(128, 128, 128, .05)
      border 1px solid rgba(128, 128, 128, .075)
      border-radius 0
      word-break break-all
      word-wrap break-word
      &.prettyprint
        position relative
        padding 5px 5px 3px 60px
        margin 0 0 1.7em
        line-height 1.7
        border 0 solid #888
        overflow-y hidden
        overflow-x auto
        white-space nowrap
        code
          box-sizing border-box
          padding 0
          font-size 18px
          font-family "Source Code Pro", monospace
          color inherit
          background-color transparent
          border-radius 0
          white-space pre
          word-wrap normal
        .pre-numbering
          position absolute
          box-sizing border-box
          width 50px
          top 0
          left 0
          margin 0
          padding-top 36.5px
          line-height 1.7
          text-align right
          background-color #eee
          border-right 1px solid #ddd
          list-style none
          > li
            margin 0





