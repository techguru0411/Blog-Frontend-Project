@import "theme.styl"

.article-details
  .detail
    .detail-footer
      text-align right
      font-size 12px
      color $color-gradually-gray-81
      border-bottom 1px dashed $color-border
      padding-bottom 10px
      margin-bottom 15px

article.article-main-content
  text-align left
  h1, h2, h3, h4, h5, h6, h7
    padding-bottom 15px
    padding-top 90px;
    margin-top -70px;
    font-weight 700
    &:focus
      outline none
  h1
    font-size 27px
  h2
    font-size 25px
  h3
    font-size 22px
  h4, h5, h6, h7
    font-size 20px
  ul, ol
    list-style-type square
    line-height 1.5em
    padding-left 2.5em
  li
    list-style-type square
    margin .5em 0
    color $color-typegraphy-title
    font-weight 200
  p
    font-size 17px
    line-height 25px
    color $color-typegraphy-title
    font-weight 200
    margin 15px 0
  img
    display block
    width 80%
    margin 0 auto
    cursor pointer

// 代码相关
pre
  margin-bottom 18px
code.hljs
  display block
  padding 0
  border 0
  margin 0
  width 100%
  font-size 14px
  font-weight 100
  background #eee !important
  color #333
  white-space pre-wrap
  > ul
    list-style decimal
    margin 30px 0 0 45px !important
    padding 0
    background-color #fff
    > li
      list-style decimal-leading-zero
      padding 5px
      margin 0
      line-height 16px
      background #fcfcfc
      border-left 1px solid #ddd
      word-break break-all
      word-wrap break-word
      &:nth-of-type(even)
        background-color #fafafa
        color inherit


