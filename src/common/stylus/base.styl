@import "theme.styl";

body, html
  line-height 1
  font-weight 300
  font-family Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial;

// 整体布局相关
.layout-content
  width auto
  @media only screen and (max-width: $responsive-sm)
    margin 5px 5px 0 5px
  @media screen and (min-width: $responsive-sm)
    margin 10px 10px 0 10px
  @media screen and (min-width: $responsive-md)
    margin 15px 35px 0 35px
  @media screen and (min-width: $responsive-lg)
    width 1200px
    margin 15px auto 0
    margin-bottom 100px
    .layout-left, .layout-right
      padding 0
      @media only screen and (max-width: $responsive-sm)
        padding 0
      @media screen and (min-width: $responsive-sm)
        padding 0
      @media screen and (min-width: $responsive-md)
        padding 0 7.5px
      @media screen and (min-width: $responsive-lg)
        padding 0 7.5px


// 弹框相关
.modal-title
  font-size 22px
  font-weight 700
  text-align center
  padding-bottom 10px

.modal-message
  font-size 16px
  line-height 28px
  text-align center
  padding-bottom 15px

.modal-input
  padding 0 20px